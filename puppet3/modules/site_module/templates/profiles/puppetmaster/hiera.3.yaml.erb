---
:backends:
<% if @use_hiera_eyaml_gpg == true -%>
  - eyaml
<% end -%>
  - yaml


:hierarchy:
  - "nodes/%{::fqdn}"
  - common

:yaml:
  :datadir: /etc/puppet/environments/%{::environment}/hieradata

<% if @use_hiera_eyaml_gpg == true -%>
:eyaml:
  :extension: 'yaml'
  :datadir: /etc/puppet/environments/%{::environment}/hieradata
  :gpg_gnupghome: '/var/lib/puppet/.gnupg'
<% end -%>

:merge_behavior: deeper
